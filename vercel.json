{
  "version": 2,
  "builds": [
    {
      "src": "build.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "spotify_downloader/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "api/download/*.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    },
    {
      "src": "staticfiles/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/staticfiles/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/api/download/(.*)",
      "dest": "/api/download/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/spotify_downloader/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "spotify_downloader.settings",
    "PYTHONPATH": "."
  },
  "functions": {
    "api/download/*.py": {
      "maxDuration": 300,
      "memory": 1024
    },
    "spotify_downloader/wsgi.py": {
      "maxDuration": 30,
      "memory": 512
    }
  },
  "outputDirectory": "staticfiles"
}
